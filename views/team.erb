<!doctype html>

<html>
  <body>
    <h1><%= @team_name %></h1>
    <h2>Team Motto: <%= @team_motto %></h2>

    <% @team_members.each.with_index do |hero, index| %>
      <h2>Hero Name: <%= @hero_name[index] %></h2>
      <ul>
        <li>Hero Power: <%= @hero_power[index] %></li>
        <li>Hero Biography: <%= @hero_bio[index] %></li>
      </ul>
    <% end %>
  </body>
</html>
