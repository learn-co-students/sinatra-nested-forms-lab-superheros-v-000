<h1>Create a Team and Heroes!</h1>

<form method="post" action="/teams">
  <% # team %>
  <label>Team Name:</label>
  <input type='text' name='team[name]'>
  
  <label>Team Motto:</label>
  <input type='text' name="team[motto]">
  
  <h2>Hero 1</h2>
  <label>Hero's Name:</label>
  <input type='text' id='member1_name' name='team[hero][][name]'>
  
  <label>Hero's Power:</label>
  <input type='text' id='member1_power' name='team[hero][][power]'>
  
  <label>Hero's Biography:</label>
  <input type='text' id='member1_bio' name='team[hero][][bio]'>
  
  <h2>Hero 2</h2>
  <label>Hero's Name:</label>
  <input type='text' id='member2_name' name='team[hero][][name]'>
  
  <label>Hero's Power:</label>
  <input type='text' id='member2_power' name='team[hero][][power]'>
  
  <label>Hero's Biography:</label>
  <input type='text' id='member2_bio' name='team[hero][][bio]'>
  
  <h2>Hero 3</h2>
  <label>Hero's Name:</label>
  <input type='text' id='member3_name' name='team[hero][][name]'>
  
  <label>Hero's Power:</label>
  <input type='text' id='member3_power' name='team[hero][][power]'>
  
  <label>Hero's Biography:</label>
  <input type='text' id='member3_bio' name='team[hero][][bio]'>
  
  <input type="submit" value="submit"> 
</form>
