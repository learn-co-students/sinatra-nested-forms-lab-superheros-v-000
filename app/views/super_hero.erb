<h2>Create a Team and Heroes!</h2><br><br>

<form action="/teams" method="post" class="form-horizontal">

  <div class="form-group">
    <label for="team_name" class="col-sm-2 control-label">Team Name:</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" name="team[name]" id="team_name" placeholder="Team Name">
    </div>
  </div>

  <div class="form-group">
    <label for="team_motto" class="col-sm-2 control-label">Team Motto:</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" name="team[motto]" id="team_motto" placeholder="Team Motto">
    </div>
  </div>

  <% @number.each do |n| %>
  <div class="form-group">
    <label for="member_name" class="col-sm-2 control-label">Member Name <%= n %>:</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" name="hero[<%=n%>][]" id="member_name" placeholder="Member Name">
    </div>
  </div>

  <div class="form-group">
    <label for="member_power" class="col-sm-2 control-label">Member Power <%= n %>:</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" name="hero[<%=n%>][]" id="member_power" placeholder="Member Power">
    </div>
  </div>

  <div class="form-group">
    <label for="member_bio" class="col-sm-2 control-label">Member Bio <%= n %>:</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" name="hero[<%=n%>][]" id="member_bio" placeholder="Member Bio">
    </div>
  </div>
  <% end %><br>

  <div class="form-group row">
    <div class="col-sm-offset-3 col-sm-2">
      <button type="submit" value="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>
