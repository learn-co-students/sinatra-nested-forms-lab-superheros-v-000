<h1>Create a Team and Heroes!</h1>
<form action="/teams" method="post">
<h2>Team</h2>
<label>Name <input type="text" name="team[name]" id=""></label><br>
<label>Motto <input type="text" name="team[motto]" id=""></label><br>
<br>
<% Array(1..3).each do |i| %>
<h3>Hero <%=i%></h3>
  <label>Name <input type="text" name="team[members][][name]" id="member<%=i%>_name"></label><br>
  <label>Power <input type="text" name="team[members][][power]" id="member<%=i%>_power"></label><br>
  <label>Biography <input type="text" name="team[members][][bio]" id="member<%=i%>_bio"></label><br>
  <br>
<% end %>
<input type="submit" value="Submit" id="submit">
</form>