<h1>Create a Team and Heroes!</h1>

<form action="/teams" method="post">
  <p>
    <label for="team_name">Team Name:</label>
    <input id="team_name" type="text" name="team[name]"></input>
  </p>
  <p>
    <label for="team_motto">Team Motto:</label>
    <input id="team_motto" type="text" name="team[motto]"></input>
  </p>
  <h2>Hero 1</h2>
  <p>
    <label for="member1_name">Hero's Name:</label>
    <input id="member1_name" type="text" name="team[members][][name]"></input>
  </p>
  <p>
    <label for="member1_power">Hero's Power:</label>
    <input id="member1_power" type="text" name="team[members][][power]"></input>
  </p>
  <p>
    <label for="member1_bio">Hero's Biography:</label>
    <input id="member1_bio" type="text" name="team[members][][bio]"></input>
  </p>
  <h2>Hero 2</h2>
