<h1>Create a Team and Heroes!</h1>

<form action="/team" method="post">
  <div class="team">
    <label>Team Name:</label><input type="text" name="team[name]">
    <label>Team Motto:</label><input type="text" name="team[motto]">
  </div>

  <div class="hero">
    <h2>Hero 1</h2>
    <label>Hero's Name:</label><input type="text" name="team[members][][name]"
      id="member1_name">
    <label>Hero's Power:</label><input type="text" name="team[members][][power]"
      id="member1_power">
    <label>Hero's Biography:</label><input type="text" name="team[members][][bio]"
      id="member1_bio">
    <h2>Hero 2</h2>
    <label>Hero's Name:</label><input type="text" name="team[members][][name]"
      id="member2_name">
    <label>Hero's Power:</label><input type="text" name="team[members][][power]"
      id="member2_power">
    <label>Hero's Biography:</label><input type="text" name="team[members][][bio]"
      id="member2_bio">
    <h2>Hero 3</h3>
      <label>Hero's Name:</label><input type="text" name="team[members][][name]"
        id="member3_name">
      <label>Hero's Power:</label><input type="text" name="team[members][][power]"
        id="member3_power">
      <label>Hero's Biography:</label><input type="text" name="team[members][][bio]"
        id="member3_bio">
  </div>
    <input type="submit" value="Submit" id="submit">
</form>
