  <label for id="member1_bio"> Hero Bio: </label> <input type="text" name="team[heroes][][bio]" id="member1_bio"><br><br>

  <h4>Hero 2 Info</h4>
  <label for id="member2_name"> Hero Name: </label> <input type="text" name="team[heroes][][name]" id="member2_name"><br>
  <label for id="member2_power"> Hero Power: </label> <input type="text" name="team[heroes][][power]" id="member2_power"><br>
  <label for id="member2_bio"> Hero Bio: </label> <input type="text" name="team[heroes][][bio]" id="member2_bio"><br><br>

  <h4>Hero 3 Info</h4>
  <label for id="member3_name"> Hero Name: </label> <input type="text" name="team[heroes][][name]" id="member3_name"><br>
  <label for id="member3_power"> Hero Power: </label> <input type="text" name="team[heroes][][power]" id="member3_power"><br>
  <label for id="member3_bio"> Hero Bio: </label> <input type="text" name="team[heroes][][bio]" id="member3_bio"><br><br>
  <input type="submit" id="submit">
</form>
