<h1>Create a Team and Heroes!</h1>

<form action="/team" method="post">
  <label for="team_name">Team Name:</label>
  <input type="text" name="team[name]" id="team_name"><br>
  <label for="team_motto">Team Motto:</label>
  <input type="text" name="team[motto]" id="team_motto"><br>

<%(1..3).each do |i|%>
  <h1><%="Hero #{i}"%></h1>
  <label for=<%="member#{i}_name"%>>Hero Name: </label>
  <input type="text" name="team[members][][name]" id=<%="member#{i}_name"%>></br>
  <label for=<%="member#{i}_power"%>>Hero Power: </label>
  <input type="text" name="team[members][][power]" id=<%="member#{i}_power"%>></br>
  <label for=<%="member#{i}_bio"%>>Hero Bio: </label>
  <input type="text" name="team[members][][bio]" id=<%="member#{i}_bio"%>></br>
<%end%>
<br>

<button type="submit" name="button" id="submit">Submit</button>
