<h1>Create a Team and Heroes!</h1>

<form action="/team" method = "post">
  <div class = 'team'>
    Team Name: <input type="text" name="team[name]"><br>
    Team Motto: <input type="text" name="team[motto]"><br>
  </div>

<div class = 'hero'>
  <h2>Hero 1</h2>
    Hero's Name: <input type="text" name="team[hero][][name]" id="member1_name"><br>
    Hero's Power: <input type="text" name="team[hero][][power]" id="member1_power"><br>
    Hero's Biography: <input type="text" name="team[hero][][biography]" id="member1_bio"><br>

  <h2>Hero 2</h2>
    Hero's Name: <input type="text" name="team[hero][][name]" id="member2_name"><br>
    Hero's Power: <input type="text" name="team[hero][][power]" id="member2_power"><br>
    Hero's Biography: <input type="text" name="team[hero][][biography]" id="member2_bio"><br>

  <h2>Hero 3</h2>
    Hero's Name: <input type="text" name="team[hero][][name]" id="member3_name"><br>
    Hero's Power: <input type="text" name="team[hero][][power]" id="member3_power"><br>
    Hero's Biography: <input type="text" name="team[hero][][biography]" id="member3_bio"><br>
    <p></p>
    <input type="submit" id="submit">
  </div>
</form>
