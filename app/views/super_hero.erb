<h1>Create a Team and Heroes!</h1>

<form method="post" action="/teams">

<label for="team_name">Team Name:</label>
<input type="text" id="team_name" name="team[name]"><br>
<label for="team_motto">Team Motto:</label>
<input type="text" id="team_motto" name="team[motto]">

<% for i in 1..3 do %>
  <h2>Hero <%= i %></h2>
  <%= "<label for='member#{i}_name'>Hero's Name:</label>" %>
  <%= "<input type='text' id='member#{i}_name' name='team[members][][name]'><br>" %>
  <%= "<label for='member#{i}_power'>Hero's Power:</label>" %>
  <%= "<input type='text' id='member#{i}_power' name='team[members][][power]'><br>" %>
  <%= "<label for='member#{i}_bio'>Hero's Biography:</label>" %>
  <%= "<input type='text' id='member#{i}_bio' name='team[members][][bio]'><br>" %>
<% end %>
<br>
<input type="submit" id="submit">
</form>
