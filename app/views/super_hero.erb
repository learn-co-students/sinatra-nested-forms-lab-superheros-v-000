<h1>Create a Team and Heroes!</h1>
<form action = "/teams" method ="post">
  <h2>Team Info</h2>
  <p>Team Name:<input type = "text" name = "team[name]" placeholder="Name"></p>
  <p>Team Name:<input type = "text" name = "team[motto]" placeholder="Motto"></p>


  <%@member_num.each do |num|%>
    <br>
    <h2>Hero <%=num%> </h2>
    <p>Hero Name:<input type = "text" name = "team[members][][name]" placeholder="Name" id ="member<%=num%>_name"></p>
    <p>Hero Power:<input type = "text" name = "team[members][][power]" placeholder="Power" id ="member<%=num%>_power"></p>
    <p>Hero Bio:<input type = "text" name = "team[members][][bio]" placeholder="Bio" id ="member<%=num%>_bio"></p>
    <br>
  <%end%>

  <input type = "submit" value="submit">


</form>

