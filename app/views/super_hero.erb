  <label for="member2_power">Power</label><br>
  <input id="member2_power" type="text" name="team[heros][][power]" /><br>
  <label for="member2_bio">Biography</label><br>
  <input id="member2_bio" type="text" name="team[heros][][biography]" /><br><br>

  <h2>Hero 3</h2>
  <label for="member3_name">Name</label><br>
  <input id="member3_name" type="text" name="team[heros][][name]" /><br>
  <label for="member3_power">Power</label><br>
  <input id="member3_power" type="text" name="team[heros][][power]" /><br>
  <label for="member3_bio">Biography</label><br>
  <input id="member3_bio" type="text" name="team[heros][][biography]" /><br><br>

  <input type="submit" value="submit" id="submit">
</form>
