
<h1>Create a Team and Heroes!</h1>
<form action="/team" method="post">
	<p>Team Name: <input type="text" name="team[name]" id=""></p>
	<p>Team Motto: <input type="text" name="team[motto]" id=""></p>
	
	<% 1.upto(3) do |i| %>
		<h1>Hero <%= i %></h1>
		<p>Hero's Name: <input type="text" name="team[members][][name]" id="<%= "member#{i}_name"%>"></p>
		<p>Hero's Power: <input type="text" name="team[members][][power]" id="<%= "member#{i}_power"%>"></p>
		<p>Hero's Biography: <input type="text" name="team[members][][bio]" id="<%= "member#{i}_bio"%>"></p>
	<% end %>
	<input type="submit" value="submit">
</form>