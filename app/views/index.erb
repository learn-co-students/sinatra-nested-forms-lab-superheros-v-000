  <input type="text" name="team[member][][name]" id="member2_name" />
  </br>
  <label for="member2_power">Hero's Power:</label>
  <input type="text" name="team[member][][power]" id="member2_power" />
  </br>
  <label for="member2_bio">Hero's Biography:</label>
  <input type="text" name="team[member][][biography]" id="member2_bio" />
  
  <h3>Hero 3</h3>
  <label for="member3_name">Hero's Name:</label>
  <input type="text" name="team[member][][name]" id="member3_name" />
  </br>
  <label for="member3_power">Hero's Power:</label>
  <input type="text" name="team[member][][power]" id="member3_power" />
  </br>
  <label for="member3_bio">Hero's Biography:</label>
  <input type="text" name="team[member][][biography]" id="member3_bio" />
  </br>
  </br>
  
  <button type="submit" value="submit">Submit</button>
</form>