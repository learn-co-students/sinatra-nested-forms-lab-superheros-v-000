  <input type="text" name="team[member][][name]" id="member1_name" />
  </br>
  <label for="member1_biography">Hero's Power:</label>
  <input type="text" name="team[member][][power]" id="member1_power" />
  </br>
  <label for="member1_bio">Hero's Biography:</label>
  <input type="text" name="team[member][][biography]" id="member1_bio" />
  
  <h3>Hero 2</h3>
