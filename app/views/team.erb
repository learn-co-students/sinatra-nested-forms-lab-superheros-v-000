<!Doctype html>
<html>
  <head>
    <meta charset="utf-8">
  </head>
  <body>
    <h1><%= @team.name %></h1>
    <h3>Team Motto: <%= @team.motto %></h3>
    <% @heroes.each do |hero| %>
      <h2>Hero Name: <%= hero.name %></h2>
      <p>Hero Power: <%= hero.power %></p><br>
      <p>Hero Biography: <%= hero.bio %></p><br>
    <% end %>
  </body>
</html>
