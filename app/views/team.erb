<!doctype html>
<html>
  <body>
    <h2>Team Name:</h2> <%= @team.name %>
    <h2>Team Motto:</h2> <%= @team.motto %>

    <h2>Super Heroes</h2>
    <% @super_heroes.each do |hero| %>
      <p>Hero Name: <%= hero.name %></p></br>
      <p>Hero Power: <%= hero.power %></p></br>
      <p>Hero Biography: <%= hero.bio %></p></br>
      <% end %>

  </body>
</html>
