
<h1>Team Name: <%= @team.name %></h1>
<h2>Team Motto: <%= @team.motto %></h2>

<h3>Members:</h3>
<% @superheroes.each do |hero| %>
  <div class="hero">
    <p>Hero Name: <%= hero.name %></p><br>
    <p>Hero Power: <%= hero.power %></p><br>
    <p>Hero Biography: <%= hero.bio %></p>
  </div><br>
<% end %>
