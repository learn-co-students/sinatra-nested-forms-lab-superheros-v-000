

<h1>Teams</h1>

<div class="team">
  <h3><%= @team.name %></h3><br>
  <h4>Team Motto: <%= @team.motto %></h4><br>
</div><br>

<h1>Superheroes</h1>
<% @superheroes.each do |superhero| %>
  <div class="superhero">
    <p>Hero Name: <%= superhero.name %></p><br>
    <p>Hero Power: <%= superhero.power %></p><br>
    <p>Hero Biography: <%= superhero.bio %></p>
  </div><br>
<% end %>
