<div class="team">
  <h1><%= @team.name %></h1>
  <h3>Team Motto: <%= @team.motto %></h3>
</div>

<% @members.each do |member| %>
  <div class="member">
    <h3>Hero Name: <%= member.name %></h3>
    <p>Hero power: <%= member.power %></p>
    <p>Hero biography: <%= member.bio %></p>
  </div>
<% end %>


