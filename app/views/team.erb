<!-- Displays Team and list of Heroes -->
<h3>Team</h3>

  <div class="team">
    <p>Team Name: <%= @team.name %></p>
    <p>Team Motto: <%= @team.motto %></p>
  </div><br>

<h3>Heroes</h3>

<% @members.each do |hero| %>
  <div class="hero">
    <p>Hero Name: <%= hero.name %></p>
    <p>Hero Power: <%= hero.power %></p>
    <p>Hero Biography: <%= hero.bio %></p>
  </div><br>
<% end %>
