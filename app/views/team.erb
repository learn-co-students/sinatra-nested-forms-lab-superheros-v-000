<div class="team">
  <h1><%= @team.name %></h1>
  <h2>Team Motto: <%= @team.motto %></h2>
</div><br>


<% @members.each.with_index do |member, index| %>
  <div class="members">
    <h3>Hero Name: <%= member.name %></h3>
    <p>Hero Power: <%= member.power %></p>
    <p>Hero Biography: <%= member.bio %></p>
    <br>
  </div>
<% end %>
