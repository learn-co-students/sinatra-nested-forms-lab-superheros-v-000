<html>
  <h1>Team</h1>

  <div class="team">
    <h3>Name: <%= @team.name %></h3><br>
    <h4>Team Motto: <%= @team.motto %></h4><br>
  </div><br>

  <h2>Members</h2>
  <% @members.each do |member| %>
    <div class="member">
      <p>Hero Name: <%= member.name %></p><br>
      <p>Hero Power: <%= member.power %></p><br>
      <p>Hero Biography: <%= member.bio %></p>
    </div><br>
  <% end %>
</html>
