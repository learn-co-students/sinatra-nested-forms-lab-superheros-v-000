<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="team">
      <h1><%= @team.name %></h1>
      <h2>Team Motto: <%= @team.motto %></h2>
    </div>

    <% @heroes.each do |hero|%>
      <div class="heros">
        <h2>Hero Name: <%= hero.name %> </h2>
        <p>Hero Power: <%= hero.power %> </p>
        <p>Hero Biography: <%= hero.bio %></p>
      </div><br>
      <% end %>
  </body>
</html>
