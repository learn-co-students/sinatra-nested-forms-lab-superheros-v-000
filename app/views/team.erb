<h2><%= @team.name %></h2>

<div class="team">
  <h3>Team Motto: <%= @team.motto %></h3>
</div><br>

<% @hero.each do |member| %>
  <div class="member">
    <h3>Hero Name: <%= member.name %></h3><br>
    <p>Hero Power: <%= member.power %></p><br>
    <p>Hero Biography: <%= member.bio %></p><br>
  </div><br>
<% end %>
