
<h1>Create a Team and Heroes!</h1>

<form action="/teams" method="post">

  <p>
  <label for="team[name]">Team Name: </label>
  <input type="text" name="team[name]" id="team[name]">
  </p>

  <p>
  <label for="team[motto]">Team Motto: </label>
  <input type="text" name="team[motto]" id="team[motto]">
  </p>

  <% 3.times do |i| %>
  <fieldset>
    <legend>Hero <%= i+1%></legend>
    <p>
      <label for="team[heroes][][name]">Hero's Name: </label>
      <input type="text" name="team[heroes][][name]" id="member<%=i+1%>_name"> 
    </p>
    
    <p>
      <label for="team[heroes][][power]">Hero's Power: </label>
      <input type="text" name="team[heroes][][power]" id="member<%=i+1%>_power">
    </p>
    
    <p>
      <label for="team[heroes][][biography]">Hero's Biography: </label> 
      <input type="text" name="team[heroes][][biography]" id="member<%=i+1%>_bio">
    </p>
  </fieldset>
<% end %>

  <input type="submit" id="submit" value="Submit">

</form>